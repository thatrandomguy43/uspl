    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Compiler",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/uspl_compiler.exe",
            "args": ["${workspaceFolder}/tests/good.uspl"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Run Compiler Tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/uspl_compiler.exe",
            "args": ["${workspaceFolder}/tests/good.uspl",
                    "${workspaceFolder}/tests/keywordspam.uspl",
                    "${workspaceFolder}/tests/unusual_declarations.uspl"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Scratchpad",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/scratchpad.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "integratedTerminal"
        }


    ]
}